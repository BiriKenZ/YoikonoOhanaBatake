<!DOCTYPE html>
<html>
<head>
  <title>YoikonoOhanaBatake</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
<body>
  <header>

    <div>
      <div>
        <%= image_tag 'bg_pattern1_aozora 16.01.25.png', class: 'bg_sky' %>
      </div>
    </div>
    <div>
      <%= image_tag 'yob_logo4.png', class: 'logo' %>
    </div>
    <div>
      <%= image_tag 'sun_yellow2_character.png', class: 'bg_sun' %>
    </div>
  </div>


</header>
<main>
  <!-- # TODO: ログアウトボタンの配置を調整する -->
  <% if current_user.present? %>
    <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "btn btn-danger" %>
  <% end %>
    <div class="p-5">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <%= yield %>
    </div>
  </main>
  <footer></footer>
</body>
</html>
