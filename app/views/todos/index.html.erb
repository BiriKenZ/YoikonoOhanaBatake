<div class="todos-index">

  <div class="todoIndex">
    <% @todos.each do |todo| %>
      <div class="todo">
        <div>
            <span><%= todo.created_at.strftime("%Y年%m月%d日") %></span>
            <span><%= todo.title %></span>
        </div>
        <div>
            <span><%= todo.comment %></span>
        </div>
      </div>
    <% end %>
  </div>


  <input type="button" id="btn" value='新規作成'>

  <div class="modalsearch">
      <i class="fa-solid fa-circle-xmark modalsearch-close"></i>
      <div class="modalsearch-contents">
          <div class="modalsearch-contents">
            <h1>タスクを登録する</h1>
              <%= form_for(@todo, url: '/todos') do |f| %>
                  <h4>タイトル</h4>
                  <%= f.text_field :title %>
                  <h4>内容</h4>
                  <%= f.text_area :comment %>
                  <%= f.submit '投稿' %>
              <% end %>
          </div>
      </div>
  </div>
  <div class="masksearch"></div>


</div>
