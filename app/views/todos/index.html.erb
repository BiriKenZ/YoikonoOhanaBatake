<div class="container tile">
  <div class="row">
    <% @todos.each do |todo| %>
      <div class="col"><%= image_tag "#{ todo.flower.color_code }.png", size: '50x50' %></div>
    <% end %>
  </div>
</div>

<div class="todos-index">

  <div class="todoIndex">
    <%= render 'todos/index', todos: @todos %>
  </div>

  <input type="button" id="btn" value='＋' class="btn btn-success btn-lg" >

  <%= image_tag "flower.png", class: "flower" %>

  <div class="modalsearch">
      <i class="fa-solid fa-circle-xmark modalsearch-close"></i>
      <div class="modalsearch-contents">
          <div class="modalsearch-contents">
            <h1 class="regist_todo">タスクを登録する</h1>
            <%= form_with model:[@todo], data: {remote: true} do |f| %>
                <h4>タイトル</h4>
                <%= f.text_field :title %>
                <h4 class="regist_todo_comment">内容</h4>
                <%= f.text_area :comment %>
                <%= f.submit '投稿', class: "btn btn-outline-secondary btn-lg mt-3"%>
            <% end %>
            <%= image_tag "mole.png", class: "mole" %>
            <%= image_tag "wakaba.png", class: "wakaba" %>
          </div>
      </div>
  </div>
  <div class="masksearch"></div>


</div>
